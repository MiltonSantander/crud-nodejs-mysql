<%- include ("partials/_header") %> 

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a href="/home/vistahome" class="navbar-brand">Factura System - Edicion de Productos</a>
</nav>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/update/<%= rows.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="name" value="<%= rows.name %>" placeholder="Nombre" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="barcode" value="<%= rows.barcode %>" placeholder="Codigo de barras" class="form-control">
                        </div>
                        <div class="form-group">
                            <select type="text" name="id_brand" placeholder="Marca" class="form-control" required>
                                <option value="" disabled selected hidden>Marca</option>
                                <% rows2.forEach(function(rows2) { %>
                                    <option name = "brand" id = "<%= rows2.brandId %>" value="<%= rows2.brandId %>"><%= rows2.brandName %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <select type="text" name="id_type" class="form-control" required>
                                <option value="" disabled selected hidden>Tipo</option>
                                <% rows3.forEach(function(rows3) { %>
                                    <option name = "type" id = "<%= rows3.typeId %>" value = "<%= rows3.typeId %>"><%= rows3.typeName %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="price" value="<%= rows.price %>" placeholder="Precio" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="quantity" value="<%= rows.quantity %>" placeholder="Cantidad" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar Edicion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("partials/_footer") %> 
