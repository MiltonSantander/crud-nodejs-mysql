<%- include ("partials/_header") %> 

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a href="/home/vistahome" class="navbar-brand">Factura System - Edicion de Clientes</a>
</nav>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/clientes/update/<%= rows.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="name" value="<%= rows.name %>" placeholder="Nombre" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="document_number" value="<%= rows.documentNumber %>" placeholder="Numero de Documento" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" value="<%= rows.address %>" placeholder="Direccion" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar Edicion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("partials/_footer") %> 
